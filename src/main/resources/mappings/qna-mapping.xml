<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="QnaDAO">
 	<resultMap type="qna" id="qnaResult">
 		<id property="qna_sq" column="QNA_SQ" />
 		<result property="qna_nm" column="QNA_NM" />
 		<result property="member_id" column="MEMBER_ID" />
 		<result property="qna_contents" column="QNA_CONTENTS" />
 		<result property="qna_rc" column="QAN_RC" />
 		<result property="qna_ymd" column="QNA_YMD" />
 	<!-- <result property="fileName" column="FILENAME" />
 		<result property="realFname" column="REALFNAME" /> -->	
 	</resultMap>
 	
 	<insert id="insertQna">
 		<![CDATA[
 			INSERT INTO QNA(QNA_NM, MEMBER_ID, QNA_CONTENTS)
			VALUES (#{qna_nm}, #{member_id}, #{qna_contents})
 		]]>
 	</insert>
 	
 	<update id="updateQna">
 		<![CDATA[
 			UPDATE QNA SET QNA_CONTENTS = #{qna_contents}
			WHERE QNA_SQ = #{qna_sq}
 		]]>
 	</update>
 	
 	<delete id="deleteQna">
 		<![CDATA[
 			DELETE FROM QNA 
			WHERE QNA_SQ = #{qna_sq}
 		]]>
 	</delete>
 	
 	<select id="detailQna" resultType="qna">
 		<![CDATA[
 			SELECT * FROM QNA 
			WHERE QNA_SQ = #{qna_sq}
 		]]>
 	</select>
 	
 	<!-- Paging -->
 	 <select id="getQnaList" resultMap="qnaResult">
 		<![CDATA[
 			SELECT * FROM QNA ORDER BY Qna_sq DESC 
 			LIMIT #{startpage}, 10;
 		]]>
 	</select> 
 	
 	<!-- Paging -->
 	<select id="getListCount" resultType="int">
 		<![CDATA[
 			SELECT COUNT(*) FROM QNA ;
 		]]>
 	</select> 

