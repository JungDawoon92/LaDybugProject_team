<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="NoticeDAO">
 	<resultMap type="notice" id="noticeResult">
 		<id property="notice_sq" column="NOTICE_SQ" />
 		<result property="notice_category" column="NOTICE_CATEGORY" />
 		<result property="notice_nm" column="NOTICE_NM" />
 		<result property="notice_contents" column="NOTICE_CONTENTS" />
		<result property="notice_img" column="NOTICE_IMG" />
 		<result property="member_id" column="MEMBER_ID" />
 		<result property="notice_ymd" column="NOTICE_YMD" />
 		<result property="notice_rc" column="NOTICE_RC" />
 		<result property="notice_mtype" column="NOTICE_MTYPE" />
 	</resultMap>
 	
 	<insert id="insertNotice">
 		<![CDATA[
 			INSERT INTO NOTICE(NOTICE_NM, MEMBER_ID, NOTICE_CONTENTS, NOTICE_IMG)
			VALUES (#{notice_nm}, #{member_id}, #{notice_contents}, #{notice_img})
 		]]><!-- file 이름 오는거 그거 하나 추가해야됨 -->
 	</insert>
 	
 	<update id="updateNotice">
 		<![CDATA[
 			UPDATE NOTICE SET NOTICE_CONTENTS = #{notice_contents}
			WHERE NOTICE_SQ = #{notice_sq}
 		]]>
 	</update>
 	
 	<delete id="deleteNotice">
 		<![CDATA[
 			DELETE FROM NOTICE 
			WHERE NOTICE_SQ = #{notice_sq}
 		]]>
 	</delete>
 	
 	<select id="detailNotice" resultType="notice">
 		<![CDATA[
 			SELECT * FROM NOTICE 
			WHERE NOTICE_SQ = #{notice_sq}
 		]]>
 	</select>
 	
 	<!-- Paging -->
 	 <select id="getNoticeList" resultMap="noticeResult">
 		<![CDATA[
 			SELECT * FROM NOTICE ORDER BY Notice_sq DESC 
 			LIMIT #{startpage}, 10;
 		]]>
 	</select> 
 	
 	<!-- Paging -->
 	<select id="getListCount" resultType="int">
 		<![CDATA[
 			SELECT COUNT(*) FROM NOTICE ;
 		]]>
 	</select> 

